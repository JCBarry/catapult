<h2><%= current_user.name %>'s Balances</h2>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Account Number</th>
            <th>Account Name</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        <% [@balances['accountbalance']].flatten.each do |balance| %>
            <tr>
                <td><%= balance['account'] %></td>
                <td><%= balance['accountname'] %></td>
                <td><%= number_to_currency balance['accountvalue'] %></td>
            </tr>
        <% end %>
    </tbody>
</table>